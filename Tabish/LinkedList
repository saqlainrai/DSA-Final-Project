class Node:
    def __init__(self, data):
        self.data = data
        self.Next = None

class LinkedList:
    def __init__(self):
        self.head = None

    def insertAtHead(self, data):
        new_Node = Node(data)
        new_Node.Next = self.head
        self.head = new_Node

    def insertAtTail(self, data):
        new_Node = Node(data)
        if self.head is None:
            self.head = new_Node
            return
        if self.head.Next is None:
            self.insertAtHead(data)

        temp = self.head
        while temp.Next:
            temp = temp.Next
        temp.Next = new_Node

    def display(self):
        temp = self.head
        while temp:
            print(temp.data)
            temp = temp.Next

class Users:
    def __init__(self):
        self.Name = LinkedList()
        self.Password = LinkedList()
        self.Address = LinkedList()

    def add_user(self, name, password, address):
        self.Name.insertAtTail(name)
        self.Password.insertAtTail(password)  # In a secure system, this should be hashed
        self.Address.insertAtTail(address)

    def login(self, username, password):
        temp = self.Name.head
        password_temp = self.Password.head

        while temp:
            if temp.data == username:
                if password_temp and password_temp.data == password:
                    return True
            temp = temp.Next
            password_temp = password_temp.Next

        return False

def main():
    users_Obj = Users()
    users_Obj.add_user("john", "pass123", "123 Main St")
    users_Obj.add_user("alice", "alicepass", "456 Oak Ave")

    username = input("Enter username: ")
    password = input("Enter password: ")

    if users_Obj.login(username, password):
        print("Login successful!")
    else:
        print("Invalid username or password.")

if __name__ == "__main__":
    main()
